import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		System.out.print("Entre com número de linhas da matriz: ");
		int L = sc.nextInt();
		System.out.print("Entre com número de colunas da matriz: ");
		int C = sc.nextInt();
		
		int[][] mat = new int[L][C];
		
		for(int i = 0; i < mat.length; i++) {
			for(int j = 0; j < mat[i].length; j++) {
				mat[i][j] = sc.nextInt();
			}
		}
		
		System.out.print("Entre com número verificador: ");
		int n = sc.nextInt();
		System.out.println();
		
		for(int i = 0; i < mat[i].length; i++) {
			for(int j = 0; j < C; j++) {
				if(mat[i][j] == n) {
					System.out.printf("Position: " + i + " " + j);
					System.out.println();
					System.out.printf("Left: " + mat[i][j-1]);
					System.out.println();
					System.out.printf("Right: " + mat[i][j+1]);
					System.out.println();
					System.out.printf("Up: " + mat[i-1][j]);
					System.out.println();
					System.out.println();
					System.out.printf("Down: " + mat[i+1][j]);
					System.out.println();
				}
			}
		}
		
		sc.close();
	}

}
